	<body>
		<h2 class="col-sm-offset-4">项目发布</h2>
		<form class="form-horizontal">
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">任务名称</label>
				<div class="input-group col-xs-6">
					<input type="email" class="form-control" id="inputEmail3" placeholder="任务名称">
				</div>
			</div>
			<div class="form-group">
				<label for="inputPassword3" class="col-sm-2 control-label">接收人</label>
				<div class="input-group col-xs-6">
					<input type="text" class="form-control">
					<span class="input-group-btn "> 
                    		<button type="button" class="btn btn-primary">+</button> 
                    </span>
				</div>
			</div>
			<div class="form-group">
				<label for="inputPassword3" class="col-sm-2 control-label">分享人</label>
				<div class="input-group col-xs-6">
					<input type="text" class="form-control">
					<span class="input-group-btn "> 
                    		<button type="button" class="btn btn-primary">+</button> 
                    </span>
				</div>
			</div>

			<!-- 文件域 -->
			<div class="form-group">
				<label for="inputPassword3" class="col-sm-2 control-label">任务内容</label>
				<div class="input-group">
					<textarea class="form-control" rows="4" style="width:600px;"></textarea>
				</div>
			</div>
			<!--
            	作者：offline
            	时间：2018-03-31
            	描述：开始时间
            -->
			<div class="form-group">
				<label for="inputPassword3" class="col-sm-2 control-label">开始时间</label>
				<div class="input-group col-sm-6">
					<input type="datetime" class="form-control" id="inputPassword3">
				</div>
			</div>
			<!--
            	作者：offline
            	时间：2018-03-31
            	描述：结束时间
            -->
			<div class="form-group">
				<label for="inputPassword3" class="col-sm-2 control-label">结束时间</label>
				<div class="input-group col-sm-6">
					<input type="datetime" class="form-control" id="inputPassword3">
				</div>
			</div>
			<!--
            	作者：offline
            	时间：2018-03-31
            	描述：定时发送
            -->
			<div class="form-group">
				<label for="inputPassword3" class="col-sm-2 control-label">定时发送</label>
				<div class="input-group  col-sm-6">
					<input type="datetime" class="form-control" id="inputPassword3">
				</div>
			</div>

			<div class="form-group">
				<label for="inputPassword3" class="col-sm-2 control-label">任务状态</label>
				<div class="input-group  col-sm-2">
					<div class="checkbox">
						<label>
							<input type="checkbox">是否跟踪
        					</label>
					</div>
				</div>
			</div>

			<div class="form-inline">
				<div class="col-sm-offset-4">
					<button type="submit" class="btn btn-default">发布</button>
					<button type="submit" class="btn btn-default col-sm-offset-1">存草稿</button>
				</div>
			</div>
		</form>
